<h1>Recipes</h1>

<% if @recipes == [] %>

<p>There are currently no recipes in the database</p>

<% else %>

<ul>

  <% @recipes.each() do |recipe| %>

  <li>
    <% if recipe.rating().!=(0) %>
    <%= recipe.rating() %>
    <% else %>
      NOT rated!
    <% end %>
    <a href="/recipes/<%= recipe.id() %>"><%= recipe.name() %></a>
  </li>

  <% end %>

</ul>

<% end %>
